<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.buddiescafe.controller.ChangePasswordFromController">
   <children>
      <ImageView fitHeight="238.0" fitWidth="512.0" layoutX="2.0" layoutY="262.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/underbg.png" />
         </image>
      </ImageView>
      <Label alignment="CENTER" layoutX="17.0" layoutY="22.0" text="Change Password" textFill="#636e72">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="41.0" layoutY="93.0" text="User Name" />
      <TextField fx:id="userName" layoutX="39.0" layoutY="120.0" onKeyReleased="#txtUnameOnKeyReleased" prefHeight="34.0" prefWidth="271.0" promptText="Input Your User Name Here" />
      <Label layoutX="41.0" layoutY="192.0" text="Employee ID" />
      <TextField fx:id="employeeId" layoutX="39.0" layoutY="219.0" onKeyReleased="#txtEidOnKeyReleased" prefHeight="34.0" prefWidth="271.0" promptText="Input Your Employee Id Here" />
      <JFXButton fx:id="cancel" alignment="CENTER" buttonType="RAISED" layoutX="289.0" layoutY="446.0" onAction="#cancelOnAction" prefHeight="34.0" prefWidth="95.0" style="-fx-background-color: FF926B;" text="Cancel" textAlignment="CENTER" textFill="#3e4d49">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton fx:id="save" alignment="CENTER" buttonType="RAISED" layoutX="170.0" layoutY="446.0" onAction="#saveOnAction" prefHeight="34.0" prefWidth="95.0" style="-fx-background-color: FFC38B;" text="Save" textAlignment="CENTER" textFill="#4d3e3e">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <Label layoutX="40.0" layoutY="285.0" text="New Password" />
      <TextField fx:id="newPassword" layoutX="38.0" layoutY="312.0" onKeyReleased="#txtNewPwOnKeyReleased" prefHeight="34.0" prefWidth="271.0" promptText="Input Your New Password Here" />
   </children>
</AnchorPane>
